#include <iostream>
using namespace std;
int main() 
{
  int h,w;
  cin>>h;
  cin>>w;
  for(int i=1;i<=h;i++)
  {
      if(i%2==0)
    {     for(int j=1;j<=w;j++)
        { 
            if(j%2==0)
            { cout<<"*"; }
            else
            { cout<<"."; }
        }
    }
      else
    {
       for(int j=1;j<=w;j++)
        { 
            if(j%2==0)
            { cout<<"."; }
            else
            { cout<<"*"; }
        }
    }    
    cout<<endl;
  }
}




#include <iostream>
using namespace std;
int main() 
{
  int h,w;
  cin>>h;
  cin>>w;
  for(int i=1;i<=h;i++)
  {
      for(int j=1;j<=w;j++)
        { 
            if((i+j)%2==1)
            { cout<<"."; }
            else
            { cout<<"*"; }
        }
    cout<<endl;
  }
}
