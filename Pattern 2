#include <iostream>
using namespace std;
int main() 
{
  int h,w;
  cin>>h;
  cin>>w;
  for(int i=1;i<=h;i++)
  {
      if ((i==1)||(i==h))
      {
         for(int j=1;j<=w;j++)
        { cout<<"*";}
      }
      else
      {
          for(int j=1;j<=w;j++)
          {
              if((j==1)||(j==w))
              {cout<<"*";}
              else
              {cout<<" ";}
          }
      }
    cout<<endl;
  }
}



#include <iostream>
using namespace std;
int main() 
{
  int h,w;
  cin>>h;
  cin>>w;
  for(int i=1;i<=h;i++)
  {
         for(int j=1;j<=w;j++)
        { 
            if((i==1)||(i==h)||(j==1)||(j==w))
            cout<<"*";
            else
            {cout<<" ";}
        }
    cout<<endl;
  }
}
